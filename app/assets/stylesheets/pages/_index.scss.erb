.main-content {
  background-image: url(<%= asset_path 'banner_bg' %>);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;

  .section {
    .book {
      background-image: url(<%= asset_path 'hero_illustration' %>);
      background-size: contain;
      background-position: center;
      background-repeat: no-repeat;
      height: 600px;
    }

    .cover {
      background-image: url(<%= asset_path 'group_13597' %>);
      background-size: contain;
      background-position: center;
      background-repeat: no-repeat;
      height: 600px;
    }

    .icon {
      height: 40px;
      margin-right: 12px;
    }

    .header {
      margin-bottom: 28px;
    }

    &.-with-bottom-margin {
      margin-bottom: 100px;
    }
  }
}
